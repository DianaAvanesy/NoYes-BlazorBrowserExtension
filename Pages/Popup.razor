@page "/popup.html"
@using System.Net.Http.Headers
@using System.Net.Http
@using System.Net.Http.Json
@using System.Threading.Tasks
@inject HttpClient Http
@inherits BasePage

<img src="@response1.image" alt="yes/no"  width="400" />

@code{
    public class Response
    {
        public string answer { get; set; }
        public Boolean forced { get; set; }
        public string image { get; set; }
    }

    public Response response1 { get; set; } = new Response();

    protected override async Task OnInitializedAsync() =>  response1 = await Http.GetFromJsonAsync<Response>("https://yesno.wtf/api/");


}